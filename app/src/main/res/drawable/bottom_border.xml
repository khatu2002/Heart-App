<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền cho layout -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Thay đổi màu này nếu cần -->
        </shape>
    </item>

    <!-- Đường viền dưới -->
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"
        android:bottom="0dp"
        android:gravity="center_horizontal"> <!-- Khoảng cách từ trái và phải làm đường viền ngắn lại -->
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Màu trong suốt -->
            <stroke
                android:width="2dp"
                android:color="#0C0A0A"/> <!-- Đường viền ở dưới với màu và độ rộng tùy chỉnh -->
        </shape>
    </item>
</layer-list>
