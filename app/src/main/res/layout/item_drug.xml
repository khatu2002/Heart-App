<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <!-- ImageVIew to display our Course Image -->
    <ImageView
        android:id="@+id/removedrug"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_margin="0dp"
        android:contentDescription="@string/app_name"
        android:padding="3dp"
        android:src="@drawable/removeicon"

        />

    <!-- Text View to display Course Name -->
    <Spinner
        android:id="@+id/drugname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/removedrug"
        android:text="Drug Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="left"/>

    <!-- Text VIew to display Course Rating -->
    <!-- Image used in present in drawable folder -->
    <EditText
        android:id="@+id/routine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drugname"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/removedrug"
        android:drawablePadding="2dp"
        android:hint="Routine"
        android:textSize="13dp"
        android:background="@color/white"
        />
    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/routine"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/removedrug"
        android:drawablePadding="2dp"
        android:hint="Amount each routine"
        android:textSize="13dp"
        android:background="@color/white"
        />




</RelativeLayout>
